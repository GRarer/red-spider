category:            Web
extra-source-files:  CHANGELOG.md

executable red-spider
  main-is:             Main.hs
  other-modules:
    Page,
    Download,
    Fetch,
    Options
  -- other-extensions:
  build-depends:
    base ^>=4.14.0.0,
    req, bytestring,
    text,
    tagsoup,
    modern-uri,
    directory,
    ghc,
    optparse-applicative,
  hs-source-dirs: src
  default-language:    Haskell2010
